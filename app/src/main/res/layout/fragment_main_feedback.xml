<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/relativeLayout_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="@string/txt_enter_your_email"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editText_your_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_email"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_turquoise_border"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_your_email"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_enter_your_subject"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editText_subject"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_subject"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_turquoise_border"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_improve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_subject"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_what_could_we_do_to_improve"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editText_improve"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/txt_improve"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_turquoise_border"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_editText"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="32dp">

        <TextView
            android:id="@+id/txt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/txt_submit"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/txt_submit"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/txt_submit"
            android:background="@color/colorPrimary" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/relativeLayout_view"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_turquoise"
        android:text="@string/txt_submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</RelativeLayout>